<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.devjchankchan.orientationexample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="reverseLandscape"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BehindOrientationActivity"
            android:configChanges="orientation|screenSize|screenLayout"
            android:label="@string/title_activity_behind_orientation"
            android:screenOrientation="behind"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NotRotationActivity"
            android:label="@string/title_activity_not_rotate"
            android:configChanges="orientation|screenSize|screenLayout"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>